{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "components": ["components"],
      "containers": ["containers"],
      "screens": ["screens"],
      "modules": ["modules"],
      "store": ["store"],
      "reducer": ["reducer"],
      "config": ["config"],
      "types": ["types"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "files": [
    "./custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
